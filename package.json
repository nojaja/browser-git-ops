{
  "name": "browser-git-ops",
  "version": "0.0.2",
  "type": "commonjs",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "A browser-native Git operations library built with OPFS and Web APIs.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nojaja/browser-git-ops.git"
  },
  "bugs": {
    "url": "https://github.com/nojaja/browser-git-ops/issues"
  },
  "homepage": "https://github.com/nojaja/browser-git-ops#readme",
  "keywords": ["virtualfs", "git", "github", "vfs", "apigit"],
  "author": "nojaja <free.riccia@gmail.com> (https://github.com/nojaja)",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "pretest:e2e": "npm run build",
    "test:e2e": "playwright test --config=playwright.config.cjs",
    "test:ci": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --runInBand",
    "lint": "eslint \"src/**/*.{ts,js}\" --config .eslintrc.cjs",
    "depcruise": "depcruise --config .dependency-cruiser.cjs src || exit 0",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:browser": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --format=iife --global-name=APIGitLib --platform=browser --sourcemap",
    "build:browser:esm": "esbuild ./src/index.ts --bundle --outfile=dist/index.mjs --format=esm --platform=browser --sourcemap",
    "build": "npm run build:types && npm run build:browser && npm run build:browser:esm",
    "docs": "typedoc --options typedoc.json && npx depcruise src --output-type dot > ./docs/dependency-cruiser.dot"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^8.45.0",
    "eslint-plugin-jsdoc": "^62.1.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "5.3.3",
    "esbuild": "^0.18.17",
    "http-server": "^14.1.1"
  }
}
